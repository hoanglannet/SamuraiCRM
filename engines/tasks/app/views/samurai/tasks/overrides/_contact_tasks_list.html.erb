<h3>Tasks for this contact</h3>

<table class="table">
  <thead>
    <th>ID</th>
    <th>Title</th>
    <th>Content</th>
    <th>Created On</th>
    <th></th>
  </thead>
  <tbody>
    <% @contact.tasks.each do |task| %>
      <tr>
      <td><%= task.id %></td>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.created_at.strftime("%d %b. %Y") %></td>
      <td>
        <%= link_to 'Show', [samurai, task] %>
        <%= link_to 'Edit', samurai.edit_task_path(task) %>
        <%= link_to 'Destroy', [samurai, task], method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
