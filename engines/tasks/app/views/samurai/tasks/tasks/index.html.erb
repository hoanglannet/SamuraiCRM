<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Created At</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to 'Show', [samurai, task] %></td>
        <td><%= link_to 'Edit', samurai.edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', [samurai, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime("%d %b. %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', samurai.new_task_path %>
